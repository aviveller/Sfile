                    </InlineUIContainer><Run Text=" "/><InlineUIContainer>
                        <Line/>
                    </InlineUIContainer><Run Text=" import quotas from csv or create them right here."/><LineBreak/><InlineUIContainer>
                        <BulletDecorator>
                            <Ellipse
                                Fill="Gray" Height="6" Width="6"/>
